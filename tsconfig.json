{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": true,
        "module": "ESNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react",
        "downlevelIteration": true,
        "paths": {
            "*": ["node_modules/*"],
            "@df-types/*": ["src/types/*"],
            "@renderer/assets/*": ["src/renderer/assets/*"],
            "@renderer/components/*": ["src/renderer/components/*"],
            "@renderer/hooks/*": ["src/renderer/hooks/*"],
            "@renderer/contexts/*": ["src/renderer/contexts/*"],
            "@renderer/util/*": ["src/renderer/util/*"],
            "@main/common/*": ["src/main/common/*"],
            "@main/electron/*": ["src/main/electron/*"],
            "@main/farming/*": ["src/main/farming/*"],
            "@main/util/*": ["src/main/util/*"],
            "@main/auth/*": ["src/main/auth/*"],
        },
        "typeRoots": ["./node_modules/@types", "src/types/renderer.d.ts"]
    },
    "include": ["src/**/*", "src/types/*.d.ts"]
}
